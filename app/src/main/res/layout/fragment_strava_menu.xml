<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MenuFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/strava_segment_button"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:text="Segment Efforts"
        app:layout_constraintStart_toStartOf="@+id/strava_members_list"
        app:layout_constraintTop_toBottomOf="@+id/strava_activities_list" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="163dp"
        android:layout_height="121dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/strava_welcome_name"
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_marginStart="68dp"
        android:text="User Name"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/strava_members_list"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:text="Strava Group Members"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strava_welcome_name" />

    <Button
        android:id="@+id/strava_activities_list"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:text="Club Latest Activities"
        app:layout_constraintStart_toStartOf="@+id/strava_members_list"
        app:layout_constraintTop_toBottomOf="@+id/strava_members_list" />


</androidx.constraintlayout.widget.ConstraintLayout>