<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ViewBlogLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.blog.ViewBlogFragment">


    <ImageView
        android:id="@+id/viewBlogImage"
        android:layout_width="372dp"
        android:layout_height="219dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/viewBlogBody"
        android:layout_width="325dp"
        android:layout_height="196dp"
        android:layout_marginStart="10dp"
        android:elegantTextHeight="true"
        android:ems="10"
        android:textStyle="bold"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBlogTitle" />

    <TextView
        android:id="@+id/viewBlogTitle"
        android:layout_width="322dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewBlogImage" />


</androidx.constraintlayout.widget.ConstraintLayout>